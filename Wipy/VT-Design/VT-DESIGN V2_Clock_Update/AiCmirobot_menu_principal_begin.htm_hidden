        <script language="javascript">
            function Send_Clock_hidden(){
                var d = new Date();
                var hours = d.getHours();
                var mins = d.getMinutes();
                
                document.getElementById("h1").value = hours
                document.getElementById("m1").value = mins
                
                
                document.forms["clock"].submit();
            }
        </script>


